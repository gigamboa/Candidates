<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Candidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/candidateName" app:layout_constraintStart_toStartOf="parent"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" android:textColor="#4E4A4A"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="Next"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/nextCandidate"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            android:textColor="#FFFFFF" android:background="#004D40" android:textStyle="bold"/>
    <Button
            android:text="Prev"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/prevCandidate"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:textColor="#FFFFFF"
            android:background="#004D40" android:textStyle="bold"/>
    <TextView
            android:text="Votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voteDisplay"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="268dp" android:layout_marginRight="268dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/candidateName" android:textColor="#00897B"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"/>
    <Button
            android:text="Vote"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/voteButton"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#009688"
            android:textColor="#FFFFFF" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/candidateName"
            app:layout_constraintBottom_toBottomOf="@+id/candidateName"/>

    <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp" tools:srcCompat="@tools:sample/avatars[2]"
            android:id="@+id/candidateImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>